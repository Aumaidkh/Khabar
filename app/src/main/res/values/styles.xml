<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appbar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Search Field Style-->
    <style name="SearchFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundColor">@color/white</item>

    </style>

    <style name="H1Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18.5sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!--Round Image Style-->
    <style name="RoundCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">10%</item>
    </style>

    <!--Round Image Style-->
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">80dp</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--Round Bottom Nav View-->
    <style name="RoundBottomNavigation" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">20%</item>
    </style>

    <!--Yellow Rating Bar-->
    <style name="YellowRatingsBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#FF9800</item>
    </style>

    <!--Dashed Progress Bar-->
    <style name="DashedProgressBar" parent="">
        <item name="colorControlActivated">@color/white</item>
        <item name="sizePercent">20</item>
        <item name="circularProgressIndicatorStyle">@id/dragStart</item>
    </style>

    <!--Custom edit text theme-->
    <style name="CustomEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="hintEnabled">false</item>
        <item name="android:colorControlHighlight">@color/orange</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">#ffb36a</item>
    </style>

    <style name="PatientDetailsInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="boxStrokeColor">#FDD49E</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <!--Custom Promo Code Theme-->
    <style name="PromoCodeFieldTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorControlActivated">@color/white</item>
        <item name="boxBackgroundColor">@color/backgroundColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="hintEnabled">false</item>
        <item name="android:colorControlHighlight">@color/orange</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">#4D000000</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>


</resources>