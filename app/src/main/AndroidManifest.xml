<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snapp.khabar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KhabarApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/splashScreenTheme">
        <activity
            android:name=".feature_fetch_news.presentation.ui.home.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Khabar" />
        <activity
            android:name=".feature_fetch_news.presentation.ui.comment.CommentsActivity"
            android:theme="@style/Theme.Khabar" />
        <activity
            android:name=".feature_fetch_news.presentation.ui.news_detail.NewsDetailActivity"
            android:theme="@style/Theme.Khabar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Khabar" />
        <activity
            android:name=".feature_fetch_news.presentation.ui.edit_account.EditAccountActivity"
            android:theme="@style/Theme.Khabar" />
        <activity
            android:name=".feature_fetch_news.presentation.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>